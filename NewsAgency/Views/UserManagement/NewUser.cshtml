@model  NewsAgency.Models.UserInfoModel
@{
    ViewBag.Title = "تعریف کاربر";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@section Scripts{

}
@section Links{
    @Html.Partial((string)ViewBag.PanelName)

}
@section Body{
    <h2>تعریف کاربر جدید</h2>


    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">مشخصات کاربر</div>
                </div>
                <div style="padding-top:30px" class="panel-body">
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    @using (Html.BeginForm("NewUser", "UserManagement", FormMethod.Post, null))
                    {
                        @Html.HiddenFor(m => m.Id)
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "نام کاربری" } })
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "رمز عبور " } })
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.EditorFor(m => m.RepeatePassword, new { htmlAttributes = new { @class = "form-control", placeholder = "تکرار رمز عبور " } })
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "نام " } })
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            @Html.EditorFor(m => m.Family, new { htmlAttributes = new { @class = "form-control", placeholder = "نام خانوادگی " } })
                        </div>
                        <div style="margin-top:10px;color:red" class="form-group">
                            @Html.ValidationSummary()
                            @ViewBag.ErrorMessage
                        </div>
                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->
                            <div class="col-sm-12 controls">
                                <input type="submit" value="تعریف کاربر" class="btn btn-success" />

                            </div>
                        </div>

                        <div style="margin-top:10px;color:green" class="form-group">

                            @ViewBag.SuccessfulMessage
                        </div>


                    }


                </div>
            </div>
        </div>

    </div>

}






